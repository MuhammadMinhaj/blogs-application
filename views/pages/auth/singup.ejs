<%- include('../../partials/head.ejs') %>

    <div class="container my-5 my-container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body">
                    <h4 class="mb-3">Create A New Account</h4>
                <form action="/auth/singup" method="POST">
                    <div class="form-group">
                        <label for="username">Enter Your Username (Must Be Uniq)</label>
                        <input type="text" name="username" class="form-control <%=error.username?'is-invalid':''%>" id="username" value="<%=value.username?value.username:''%>">
                        <div class="invalid-feedback"><%=error.username%></div>
                    </div>
                    <div class="form-group">
                        <label for="email">Enter Your Email</label>
                        <input type="email" name="email" id="email" class="form-control <%=error.email?'is-invalid':''%>" value="<%=value.email?value.email:''%>">
                        <div class="invalid-feedback"><%=error.email%></div>
                    </div>
                    <div class="form-group">
                        <label for="password">Enter A Strong Password</label>
                        <input type="password" name="password" id="passowrd" class="form-control <%=error.password?'is-invalid':''%>" value="<%=value.password?value.password:''%>">
                        <div class="invalid-feedback"><%=error.password%></div>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Your Password</label>
                        <input type="password" name="confirmPassword" id="confirmPassowrd" class="form-control <%=error.confirmPassword?'is-invalid':''%>">
                        <div class="invalid-feedback"><%=error.confirmPassword%></div>
                    </div>
                   <input type="submit" value="Singup" class="btn btn-primary">
                </form>
                <a href="/auth/login" class="my-3 text-center">Already have an Account?Please login here.</a>
                </div>
            </div>
        </div>
    </div>

<%- include('../../partials/footer.ejs') %>
</body>
</html>