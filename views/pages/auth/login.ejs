<%- include('../../partials/head.ejs') %>

    <div class="container my-5 my-container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body">
                    <h4 class="mb-3">Create A New Account</h4>
                <form action="/auth/login" method="POST">
                    <div class="form-group">
                        <label for="email">Enter Your Email</label>
                        <input type="email" name="email" id="email" class="form-control <%=error.email?'is-invalid':''%>">
                        <div class="invalid-feedback"><%=error.email%></div>

                    </div>
                    <div class="form-group">
                        <label for="password">Enter A Strong Password</label>
                        <input type="password" name="password" id="passowrd" class="form-control <%=error.password?'is-invalid':''%>">
                        <div class="invalid-feedback"><%=error.password%></div>
                    </div>
                    <input type="submit" value="Login" class="btn btn-primary">
                </form>
                <a href="/auth/singup" class="my-3 text-center">Don't have an Account?Create new Account</a>
                </div>
            </div>
        </div>
    </div>



<%- include('../../partials/footer.ejs') %>
</body>
</html>